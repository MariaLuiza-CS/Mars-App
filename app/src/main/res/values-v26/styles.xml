<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColorHint">@color/white_dark</item>
        <item name="hintTextColor">@color/white_dark</item>
        <item name="boxStrokeColor">#fff</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="boxCornerRadiusBottomStart">10dp</item>
        <item name="boxCornerRadiusBottomEnd">10dp</item>
        <item name="boxCornerRadiusTopEnd">10dp</item>
        <item name="boxCornerRadiusTopStart">10dp</item>
        <item name="boxBackgroundColor">@color/white_light</item>
        <item name="startIconTint">@android:color/white</item>
        <item name="helperTextEnabled">true</item>
        <item name="helperTextTextColor">@color/yellow_dark</item>
        <item name="android:layout_marginHorizontal">32dp</item>
    </style>
</resources>